{
  "development": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "logging": true
  },
  "test": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "logging": false
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "logging": false,
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": false
      }
    }
  }
} 